# =============================================================================
#  DOCKER COMPOSE ENVIRONMENT VARIABLES - EXAMPLE
# =============================================================================
# Copy this file to .env and modify the values according to your needs
# Keep the .env file secure and never commit it to version control.

# =============================================================================
# MINIO CONFIGURATION
# =============================================================================
# MinIO root user credentials
MINIO_ROOT_USER=your_minio_username
MINIO_ROOT_PASSWORD=your_secure_password_min_8_chars

# MinIO Console Configuration
MINIO_BROWSER_REDIRECT_URL=http://localhost:9001

# MinIO Ports
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
# MongoDB root user credentials
MONGO_INITDB_ROOT_USERNAME=your_mongo_username
MONGO_INITDB_ROOT_PASSWORD=your_secure_mongo_password
MONGO_INITDB_DATABASE=your_project_name

# MongoDB Port
MONGODB_PORT=27017

# =============================================================================
# ELASTICSEARCH CONFIGURATION
# =============================================================================
# Elasticsearch cluster name
CLUSTER_NAME=your-cluster-name

# Elasticsearch node name
NODE_NAME=elasticsearch-node-1

# Elasticsearch discovery type (single-node for development)
DISCOVERY_TYPE=single-node

# Security settings (disabled for development)
XPACK_SECURITY_ENABLED=false
XPACK_SECURITY_ENROLLMENT_ENABLED=false

# Machine Learning settings (disabled to reduce resource usage)
XPACK_ML_ENABLED=false

# Java heap size settings (adjust based on available memory)
# Recommended: 50% of available RAM, max 32GB
ES_JAVA_OPTS=-Xms1g -Xmx1g

# Network settings
NETWORK_HOST=0.0.0.0

# Elasticsearch Ports
ELASTICSEARCH_HTTP_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300

# Bootstrap memory lock 
BOOTSTRAP_MEMORY_LOCK=true

# =============================================================================
# KIBANA CONFIGURATION
# =============================================================================
# Kibana web interface port
KIBANA_PORT=5601

# Kibana server configuration
KIBANA_SERVER_NAME=your-kibana-server
KIBANA_SERVER_HOST=0.0.0.0

# Kibana encryption key 
# Generate with: openssl rand -base64 32
KIBANA_ENCRYPTION_KEY=your-32-character-encryption-key

# =============================================================================
# MONGO EXPRESS CONFIGURATION
# =============================================================================
# Mongo Express web interface port
MONGO_EXPRESS_PORT=8081

# Mongo Express authentication credentials
MONGO_EXPRESS_USERNAME=your_express_username
MONGO_EXPRESS_PASSWORD=your_secure_express_password

# Mongo Express base URL
MONGO_EXPRESS_BASEURL=/

# =============================================================================
# DOCKER COMPOSE CONFIGURATION
# =============================================================================
# Compose project name
COMPOSE_PROJECT_NAME=your-project-stack

# Network name
NETWORK_NAME=your_project_stack

# =============================================================================
# VOLUME CONFIGURATION
# =============================================================================
# Volume driver (local for single-node, can be changed for distributed setups)
VOLUME_DRIVER=local

# =============================================================================
# POSTGRESQL CONFIGURATION
# =============================================================================
# PostgreSQL database configuration
POSTGRES_DB=your_keycloak_database
POSTGRES_USER=your_postgres_username
POSTGRES_PASSWORD=your_secure_postgres_password

# PostgreSQL initialization arguments
POSTGRES_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C

# PostgreSQL authentication method
POSTGRES_HOST_AUTH_METHOD=scram-sha-256

# PostgreSQL Port
POSTGRESQL_PORT=5432

# =============================================================================
# KEYCLOAK CONFIGURATION
# =============================================================================
# Keycloak admin credentials
KEYCLOAK_ADMIN=your_keycloak_admin
KEYCLOAK_ADMIN_PASSWORD=your_secure_keycloak_admin_password

# Keycloak database configuration
KC_DB_NAME=your_keycloak_database
KC_DB_USERNAME=your_postgres_username
KC_DB_PASSWORD=your_secure_postgres_password

# Keycloak hostname configuration
KC_HOSTNAME=localhost
KC_HOSTNAME_PORT=8080
KC_HOSTNAME_STRICT=false
KC_HOSTNAME_STRICT_HTTPS=false

# Keycloak HTTP settings
KC_HTTP_ENABLED=true

# Keycloak health and metrics
KC_HEALTH_ENABLED=true
KC_METRICS_ENABLED=true

# Keycloak cache configuration
KC_CACHE=ispn
KC_CACHE_STACK=tcp

# Keycloak Port
KEYCLOAK_PORT=8080

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
# Health check intervals (in seconds)
HEALTHCHECK_INTERVAL=30
HEALTHCHECK_TIMEOUT=10
HEALTHCHECK_RETRIES=3

# =============================================================================